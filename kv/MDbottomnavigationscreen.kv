<MDBottomNavigationScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            pos_hint: {'top': 1}
            id: toolbar
            elevation: 10
            title: 'Navigation Drawer'

        MDBottomNavigation:
            # This is a fancy screenmanager
            id: bottom_navigation

            MDBottomNavigationItem:
                # This is a fancy screen
                text: 'Home'
                name: 'screen1'
                icon: 'home'
                MDRaisedButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Home Screen'
                    md_bg_color: app.theme_cls.accent_color

            MDBottomNavigationItem:
                # This is a fancy screen
                text: 'My Account'
                name: 'screen2'
                icon: 'account'
                MDRaisedButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Account Screen'
                    md_bg_color: app.theme_cls.primary_color

            MDBottomNavigationItem:
                # This is a fancy screen
                text: 'Settings'
                name: 'screen3'
                icon: 'settings'
                MDRaisedButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Settings Screen'
                    md_bg_color: (1, 0, 0, 1)

        Widget:
            size_hint_y: None
            height: dp(50)
