<ExpansionPanelContent>
    adaptive_height: True

    TwoLineIconListItem:
        text: "(050)-123-45-67"
        secondary_text: "Mobile"

        IconLeftWidget:
            icon: 'phone'

<MDExpansionPanelScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            pos_hint: {'top': 1}
            id: toolbar
            elevation: 10
            title: 'Navigation Drawer'

        ScrollView:
            bar_width: 0

            MDBoxLayout:
                id: box
                orientation: 'vertical'
                adaptive_height: True

        Widget:
            size_hint_y: None
            height: dp(55)


