<DrawerContent>:
    orientation: 'vertical'
    padding: '8dp'
    spacing: '8dp'

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: '56dp', '56dp'
            source: r'kivymd/images/kivymd_logo.png'

    MDLabel:
        text: "The KivyMD demo app"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "luke.olender@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        MDList:
            OneLineIconListItem:
                text: 'MDBottomNavigation'
                on_release:
                    app.on_bottom_navigation()
                    root.nav_drawer.set_state('close')
                    app.change_screen('MD_bottom_navigation_screen', text=self.text)
                IconLeftWidget:
                    icon: 'navigation'

            OneLineIconListItem:
                text: 'MDBottomSheet'
                on_release:
                    app.on_bottom_navigation()
                    root.nav_drawer.set_state('close')
                    app.change_screen('MD_bottom_sheet_screen', text=self.text)
                IconLeftWidget:
                    icon: 'share-variant'

            OneLineIconListItem:
