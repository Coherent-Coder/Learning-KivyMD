<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height
    max_swipe_x: 0.1

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: app.remove_item(root)

    MDCardSwipeFrontBox:

        # Content of card.
        TwoLineListItem:
            id: content
            text: root.text
            secondary_text: 'Secondary Text'
            _no_ripple_effect: True


<MDCardSwipeScreen>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            pos_hint: {'top': 1}
            id: toolbar
            elevation: 10
            title: 'Navigation Drawer'

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {'center_x': .5}

            ScrollView:
                MDList:
                    id: MD_card_swipe_demo

        Widget:
            size_hint_y: None
            height: dp(55)